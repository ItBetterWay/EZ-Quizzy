    <!-- show any messages that come back with authentication -->
    {{#if message}}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error: </strong> {{ message }}
        </div>
    {{/if}}
<div class="container d-flex text-center justify-content-center mt-5">
    <form class="form-signup" action="/login/signup" method="post">
        <svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-journal-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 1h5v1H4a1 1 0 0 0-1 1H2a2 2 0 0 1 2-2zm10 7v5a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2h1a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V8h1zM2 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H2zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H2zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H2z"/>
            <path fill-rule="evenodd" d="M15.854 2.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 4.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
        </svg>
        <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

        <label for="inputName" class="sr-only">Name</label>
        <input type="text" name="userName" id="inputName" class="form-control mb-4" placeholder="Sam" required autofocus>

        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" name="userEmail" id="inputEmail" class="form-control mb-4" placeholder="Email address">

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="userPassword" id="inputPassword" class="form-control mb-4" placeholder="Password" required>

        <label for="inputPasswordConfirm" class="sr-only">Confirm Password</label>
        <input type="password" name="userConfirmPassword" id="inputPasswordConfirm" class="form-control mb-4" placeholder="Confirm Password" required>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
    </form>
</div>