        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" name="userEmail" id="inputEmail" class="form-control mb-4" placeholder="Email address" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>

        <input type="password" name="userPassword" id="inputPassword" class="form-control mb-4" placeholder="Password" required>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <button onclick="location.href='/login/signup'" class="btn btn-lg btn-primary btn-block" type="button">Sign up</button>
    </form>
</div>